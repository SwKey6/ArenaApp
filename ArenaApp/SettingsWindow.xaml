<Window x:Class="ArenaApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки" Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{StaticResource DarkBackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.7*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Левая панель с разделами -->
        <Border Grid.Row="0" Grid.Column="0" 
                Background="{StaticResource DarkPanelBrush}"
                BorderBrush="{StaticResource DarkBorderBrush}"
                BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <TextBlock Text="Разделы" 
                             FontSize="16" 
                             FontWeight="Bold"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             Margin="0,0,0,15"/>
                    
                    <Button x:Name="OutputSectionButton"
                          Content="Вывод"
                          Click="OutputSectionButton_Click"
                          Style="{StaticResource MenuButtonStyle}"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Left"
                          Margin="0,0,0,5"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Правая панель с контентом -->
        <ScrollViewer Grid.Row="0" Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ContentPanel" Margin="20">
                <!-- Раздел "Вывод" -->
                <StackPanel x:Name="OutputSection" Visibility="Visible">
                    <TextBlock Text="Настройки вывода на второй экран"
                             FontSize="18"
                             FontWeight="Bold"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             Margin="0,0,0,20"/>
                    
                    <!-- Позиция экрана -->
                    <GroupBox Header="Позиция экрана" 
                            Foreground="{StaticResource TextPrimaryBrush}" 
                            BorderBrush="{StaticResource DarkBorderBrush}"
                            Margin="0,0,0,15">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                     Text="X:"
                                     Foreground="{StaticResource TextSecondaryBrush}"
                                     VerticalAlignment="Center"
                                     Margin="0,0,10,10"/>
                            <TextBox x:Name="PositionXTextBox"
                                   Grid.Row="0" Grid.Column="1"
                                   Text="0"
                                   TextChanged="PositionXTextBox_TextChanged"
                                   Margin="0,0,0,10"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0"
                                     Text="Y:"
                                     Foreground="{StaticResource TextSecondaryBrush}"
                                     VerticalAlignment="Center"
                                     Margin="0,0,10,0"/>
                            <TextBox x:Name="PositionYTextBox"
                                   Grid.Row="1" Grid.Column="1"
                                   Text="0"
                                   TextChanged="PositionYTextBox_TextChanged"/>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Размер вывода -->
                    <GroupBox Header="Размер вывода" 
                            Foreground="{StaticResource TextPrimaryBrush}" 
                            BorderBrush="{StaticResource DarkBorderBrush}"
                            Margin="0,0,0,15">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                     Text="Ширина:"
                                     Foreground="{StaticResource TextSecondaryBrush}"
                                     VerticalAlignment="Center"
                                     Margin="0,0,10,10"/>
                            <TextBox x:Name="OutputWidthTextBox"
                                   Grid.Row="0" Grid.Column="1"
                                   Text="1920"
                                   TextChanged="OutputWidthTextBox_TextChanged"
                                   Margin="0,0,0,10"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0"
                                     Text="Высота:"
                                     Foreground="{StaticResource TextSecondaryBrush}"
                                     VerticalAlignment="Center"
                                     Margin="0,0,10,0"/>
                            <TextBox x:Name="OutputHeightTextBox"
                                   Grid.Row="1" Grid.Column="1"
                                   Text="1080"
                                   TextChanged="OutputHeightTextBox_TextChanged"/>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Скейл -->
                    <GroupBox Header="Масштаб" 
                            Foreground="{StaticResource TextPrimaryBrush}" 
                            BorderBrush="{StaticResource DarkBorderBrush}"
                            Margin="0,0,0,15">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                     Text="X:"
                                     Foreground="{StaticResource TextSecondaryBrush}"
                                     VerticalAlignment="Center"
                                     Margin="0,0,10,10"/>
                            <Slider x:Name="ScaleXSlider"
                                  Grid.Row="0" Grid.Column="1"
                                  Minimum="10"
                                  Maximum="500"
                                  Value="100"
                                  TickFrequency="1"
                                  IsSnapToTickEnabled="True"
                                  ValueChanged="ScaleXSlider_ValueChanged"
                                  Margin="10,0,10,10"/>
                            <TextBlock x:Name="ScaleXValueText"
                                     Grid.Row="0" Grid.Column="2"
                                     Text="100%"
                                     Foreground="{StaticResource TextSecondaryBrush}"
                                     VerticalAlignment="Center"
                                     MinWidth="50"
                                     Margin="0,0,0,10"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0"
                                     Text="Y:"
                                     Foreground="{StaticResource TextSecondaryBrush}"
                                     VerticalAlignment="Center"
                                     Margin="0,0,10,0"/>
                            <Slider x:Name="ScaleYSlider"
                                  Grid.Row="1" Grid.Column="1"
                                  Minimum="10"
                                  Maximum="500"
                                  Value="100"
                                  TickFrequency="1"
                                  IsSnapToTickEnabled="True"
                                  ValueChanged="ScaleYSlider_ValueChanged"
                                  Margin="10,0,10,0"/>
                            <TextBlock x:Name="ScaleYValueText"
                                     Grid.Row="1" Grid.Column="2"
                                     Text="100%"
                                     Foreground="{StaticResource TextSecondaryBrush}"
                                     VerticalAlignment="Center"
                                     MinWidth="50"/>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Кнопки внизу окна -->
        <Border Grid.ColumnSpan="2" 
                Grid.Row="1"
                Background="{StaticResource DarkPanelBrush}"
                BorderBrush="{StaticResource DarkBorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="ApplyButton"
                      Content="Применить"
                      Click="ApplyButton_Click"
                      Style="{StaticResource MenuButtonStyle}"
                      Margin="0,0,10,0"
                      Width="120"/>
                <Button x:Name="OkButton"
                      Content="OK"
                      Click="OkButton_Click"
                      Style="{StaticResource MenuButtonStyle}"
                      Margin="0,0,10,0"
                      Width="120"
                      IsDefault="True"/>
                <Button x:Name="CancelButton"
                      Content="Закрыть"
                      Click="CancelButton_Click"
                      Style="{StaticResource MenuButtonStyle}"
                      Width="120"
                      IsCancel="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

