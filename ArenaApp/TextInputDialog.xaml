<Window x:Class="ArenaApp.TextInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод текста" Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="TextLabel" Grid.Row="0" Text="Введите текст:" Margin="0,0,0,10" FontSize="14"/>
        
        <TextBox x:Name="TextInputBox" Grid.Row="1" Height="80" TextWrapping="Wrap" 
                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto" 
                 FontSize="14" Margin="0,0,0,10"/>
        
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="OkButton" Content="OK" Width="120" Height="35" Margin="0,0,15,0" 
                    Click="OkButton_Click" IsDefault="True"
                    Background="#4CAF50" Foreground="White" 
                    BorderBrush="#45A049" BorderThickness="1"
                    FontWeight="Bold" FontSize="14"/>
            <Button Name="CancelButton" Content="Отмена" Width="120" Height="35" 
                    Click="CancelButton_Click" IsCancel="True"
                    Background="#F44336" Foreground="White"
                    BorderBrush="#D32F2F" BorderThickness="1"
                    FontWeight="Bold" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
